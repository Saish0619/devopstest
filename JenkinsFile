pipeline {
    agent any

    stages {
        stage('Use Minikube Docker Daemon') {
            steps {
                bat 'minikube docker-env --shell=cmd > docker_env.bat'
                bat 'call docker_env.bat'
            }
        }

        stage('Clone') {
            steps {
                git 'https://github.com/Saish0619/devopstest'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t my-node-app:latest ."
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f deployment.yaml'
                bat 'kubectl apply -f service.yaml'
            }
        }
    }
}
